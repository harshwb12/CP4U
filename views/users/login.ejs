<% layout('layouts/boilerplate') %>

    <div class="row">
        <h3 class="text-center">Login</h3>
        <div class="col-1"></div>
        <div class="col-10 shadow p-3 bg-white">
            <form action="/login" method="POST" autocomplete="off">
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" placeholder="Enter username" type="text" id="username" name="username"
                        required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" placeholder="Enter password" type="password" id="password"
                        name="password" required>
                </div>

                <div class="mb-3">
                    <button class="btn btn-primary">Submit</button>
                </div>

            </form>
            <a href="/register">Register</a>
        </div>
        <div class="col-1"></div>
    </div>