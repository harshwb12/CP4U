                })
            </script>
            <script>
                const tx = document.getElementsByClassName("out");
                for (let i = 0; i < tx.length; i++) {
                    tx[i].setAttribute("style", "height:" + (tx[i].scrollHeight) + "px;overflow-y:hidden;" + "min-width:100%;");
                    tx[i].addEventListener("input", OnInput, false);
                }

                function OnInput() {
                    this.style.height = "auto";
                    this.style.height = (this.scrollHeight) + "px";
                }
            </script>

